  name = "${var.cluster_name}-elasticache-sg"
  description = "Security group for airflow elasticache"
  vpc_id = aws_vpc.airflow_vpc.id
  tags = var.tags

  ingress {
      from_port   = 6379
      to_port     = 6379
      protocol    = "tcp"
      cidr_blocks = ["10.0.0.0/16"]
  }

  egress {
      from_port       = 0
      to_port         = 0
      protocol        = "-1"
      cidr_blocks     = ["0.0.0.0/0"]
  }
}

resource "aws_elasticache_subnet_group" "airflow_redis_subnet_group" {
  name = "${var.cluster_name}-elasticache-subnet-group"
  subnet_ids = [aws_subnet.private.id]
  tags       = var.tags
}

